<% if user_signed_in? %>
  <li>  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> </li>
<% else %>
  <li><%= link_to('Login', new_user_session_path) %></li>
<% end %>
<li class="user-name">User:
<% if current_user %>
  <%= current_user.email %> <%= current_user.id %></li>
<% else %>
  (not logged in)</li>
<% end %>
